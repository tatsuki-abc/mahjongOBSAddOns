<Window x:Class="mahjongOBSAddOns.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mahjongOBSAddOns"
        mc:Ignorable="d"
        Title="麻雀点数計算" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- 上半分 -->
            <RowDefinition Height="*" />
            <!-- 下半分 -->
        </Grid.RowDefinitions>

        <!-- 上半分をさらに左右に分割 -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <!-- 左 -->
                <ColumnDefinition Width="*" />
                <!-- 右 -->
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="LightBlue">
                <StackPanel Margin="10">

                    <!-- 麻雀人数選択 -->
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="人数：" Width="80"/>
                        <ComboBox x:Name="PlayerCountComboBox" Width="100">
                            <ComboBoxItem Content="4人麻雀" />
                            <ComboBoxItem Content="3人麻雀" />
                        </ComboBox>
                    </StackPanel>

                    <!-- 和了者/放銃者の選択 -->
                    <StackPanel Orientation="Horizontal" Margin="0.5">
                        <TextBlock Text="和了者：" Width="80"/>
                        <ComboBox x:Name="WinnerComboBox" Width="100" Margin="0,0,10,0"/>
                        <TextBlock Text="放銃者：" Width="80"/>
                        <ComboBox x:Name="LoserComboBox" Width="100"/>
                    </StackPanel>

                    <!-- ツモ or ロン -->
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="和了方法：" Width="80"/>
                        <ComboBox x:Name="WinTypeComboBox" Width="100">
                            <ComboBoxItem Content="ツモ"/>
                            <ComboBoxItem Content="ロン"/>
                        </ComboBox>
                    </StackPanel>

                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="LightGreen">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0.5">
                        <!-- 翻数 -->
                        <TextBlock Text="翻数:" VerticalAlignment="Center" Width="80"/>
                        <ComboBox x:Name="hanComboBox" Width="100">
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="5"/>
                            <ComboBoxItem Content="6"/>
                            <ComboBoxItem Content="7"/>
                            <ComboBoxItem Content="8"/>
                            <ComboBoxItem Content="9"/>
                            <ComboBoxItem Content="10"/>
                            <ComboBoxItem Content="11"/>
                            <ComboBoxItem Content="12"/>
                            <ComboBoxItem Content="13"/>
                            <ComboBoxItem Content="26"/>
                            <ComboBoxItem Content="39"/>
                            <ComboBoxItem Content="52"/>
                            <ComboBoxItem Content="65"/>
                            <ComboBoxItem Content="78"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0.5">
                        <!-- 符数 -->
                        <TextBlock Text="符数:" VerticalAlignment="Center" Width="80"/>
                        <ComboBox x:Name="fuComboBox" Width="100">
                            <ComboBoxItem Content="20"/>
                            <ComboBoxItem Content="25"/>
                            <ComboBoxItem Content="30"/>
                            <ComboBoxItem Content="40"/>
                            <ComboBoxItem Content="50"/>
                            <ComboBoxItem Content="60"/>
                            <ComboBoxItem Content="70"/>
                            <ComboBoxItem Content="80"/>
                            <ComboBoxItem Content="90"/>
                            <ComboBoxItem Content="100"/>
                            <ComboBoxItem Content="110"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0.5">
                        <TextBlock Text="積み棒:" VerticalAlignment="Center" Width="80"/>
                        <ComboBox x:Name="kyoutakuComboBox" Width="100">
                            <ComboBoxItem Content="0"/>
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="5"/>
                            <ComboBoxItem Content="6"/>
                            <ComboBoxItem Content="7"/>
                            <ComboBoxItem Content="8"/>
                            <ComboBoxItem Content="9"/>
                            <ComboBoxItem Content="10"/>
                            <ComboBoxItem Content="11"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0.5">
                        <TextBlock Text="本場:" VerticalAlignment="Center" Width="80"/>
                        <ComboBox x:Name="honbaComboBox" Width="100">
                            <ComboBoxItem Content="0"/>
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="5"/>
                            <ComboBoxItem Content="6"/>
                            <ComboBoxItem Content="7"/>
                            <ComboBoxItem Content="8"/>
                            <ComboBoxItem Content="9"/>
                            <ComboBoxItem Content="10"/>
                            <ComboBoxItem Content="11"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 下半分 -->
        <Border Grid.Row="1" Background="LightGray">
            <StackPanel>
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                    <RadioButton x:Name="ParentRadio" Content="親" GroupName="PlayerType" IsChecked="True" Margin="0,0,10,0"/>
                    <RadioButton x:Name="ChildRadio" Content="子" GroupName="PlayerType"/>
                </StackPanel>

                <Button Name="ApplyScoreButton" Content="点数適用" Click="ApplyScoreButton_Click" Width="100"/>

                <TextBlock x:Name="ResultText" Grid.Row="4" FontSize="16" Margin="0,10,0,0" TextWrapping="Wrap"/>

                <StackPanel Orientation="Horizontal" Margin="10">
                    <TextBlock Text="プレイヤー1"/>
                    <TextBlock x:Name="Player1ScoreText" FontSize="16" Margin="0,0,10,0" />

                    <TextBlock Text="プレイヤー2"/>
                    <TextBlock x:Name="Player2ScoreText" FontSize="16" Margin="0,0,10,0" />

                    <TextBlock Text="プレイヤー3"/>
                    <TextBlock x:Name="Player3ScoreText" FontSize="16" Margin="0,0,10,0" />

                    <TextBlock Text="プレイヤー4" x:Name="Player4Label"/>
                    <TextBlock x:Name="Player4ScoreText" FontSize="16" Margin="0,0,10,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
